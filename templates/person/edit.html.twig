{% extends 'base.html.twig' %}
{% block body %}
  <h2>{% if person.id %}Edycja użytkownika{% else %}Dodaj użytkownika{% endif %}</h2>
  {{ form_start(form) }}
    {{ form_row(form.login) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.firstname) }}
